<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>User Profile</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
body{
  background: linear-gradient(135deg, #1d976c, #93f9b9);
  min-height:100vh;
  display:flex;
  align-items:center;
  justify-content:center;
  font-family: "Segoe UI", sans-serif;
}

.wrapper{
  background:#fff;
  border-radius:25px;
  overflow:hidden;
  box-shadow:0 15px 40px rgba(0,0,0,0.25);
  max-width:1200px;
  width:100%;
}

.left-panel{
  background: linear-gradient(to bottom, #185a9d, #43cea2);
  color:white;
  padding:50px;
}

.left-panel h2{
  font-weight:bold;
}

.right-panel{
  padding:40px;
}

.card{
  border-radius:15px;
  box-shadow:0 8px 18px rgba(0,0,0,0.15);
}

.card img{
  height:160px;
  object-fit:cover;
  border-radius:15px 15px 0 0;
}

.badge{
  font-size:0.8rem;
}
</style>
</head>

<body>

<div class="wrapper row g-0">

  <!-- LEFT PANEL -->
  <div class="col-md-4 left-panel d-flex flex-column justify-content-center text-center">
    <h2>ğŸ‘¤ <%= user.name %></h2>
    <p><strong>Email:</strong> <%= user.email %></p>
    <p><strong>Role:</strong> <%= user.role.toUpperCase() %></p>

    <p class="mt-4">
      <strong>â€œYour kindness creates change.â€</strong>
    </p>
  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-8 right-panel">

    <!-- NGO VIEW -->
    <% if (user.role === "ngo") { %>
      <h4 class="mb-3 text-success">ğŸ“¢ My Campaigns</h4>

      

      <% if (campaigns.length === 0) { %>
        <p class="text-muted">You have not created any campaigns yet.</p>
      <% } %>

      <div class="row">
        <% campaigns.forEach(c => { %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <img src="<%= c.imageUrl || 'https://picsum.photos/300' %>" class="card-img-top">
              <div class="card-body">
                <h6><%= c.title %></h6>
                <span class="badge bg-primary"><%= c.category %></span>
                <p class="mt-2 mb-1">ğŸ¯ â‚¹<%= c.targetAmount %></p>
                <p class="mb-2">ğŸ’° â‚¹<%= c.raisedAmount %></p>
                <a href="/api/campaigns/<%= c._id %>" class="btn btn-sm btn-outline-primary w-100">
                  View Campaign
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- USER VIEW -->
    <% if (user.role === "user") { %>
      <h4 class="mb-3 text-success">ğŸ’ My Donations</h4>



      <% if (donations.length === 0) { %>
        <p class="text-muted">You have not donated yet.</p>
      <% } %>

      <ul class="list-group">
        <% donations.forEach(d => { %>
          <li class="list-group-item">
            <strong>Campaign:</strong> <%= d.campaign.title %>
            (<%= d.campaign.status %>)<br>

            <% if (d.type === "money") { %>
              ğŸ’° Amount: â‚¹<%= d.amount %>
            <% } else { %>
              ğŸ“¦ Item: <%= d.itemType %> (x<%= d.quantity %>)<br>
              ğŸ“ Pickup: <%= d.pickupAddress %>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <!-- NAVIGATION -->
    <div class="mt-4 d-flex gap-2 flex-wrap">
      <a href="/" class="btn btn-outline-success">ğŸ  Home</a>
      <a href="/api/campaigns/" class="btn btn-outline-success">ğŸ“‹ All Campaigns</a>

    </div>

  </div>
</div>

</body>
</html>
